{
  "flags": [
    {
      "key": "share",
      "enabled": true,
      "description": "Habilita botões de compartilhamento em posts e desafios",
      "metadata": {
        "networks": ["threads", "x", "whatsapp"]
      }
    },
    {
      "key": "newsletter",
      "enabled": false,
      "description": "Habilita CTAs e formulários de newsletter",
      "metadata": {
        "provider": "convertkit",
        "formId": "newsletter-main"
      }
    },
    {
      "key": "ads",
      "enabled": false,
      "description": "Habilita sistema de anúncios (mockados e Google Ads)",
      "metadata": {
        "mockPriority": 0.7,
        "googleAdsEnabled": true
      }
    },
    {
      "key": "comments",
      "enabled": false,
      "description": "Sistema de comentários (futuro)",
      "metadata": {
        "provider": "disqus"
      }
    },
    {
      "key": "analytics",
      "enabled": true,
      "description": "Google Analytics e tracking",
      "metadata": {
        "provider": "google-analytics"
      }
    }
  ]
}

